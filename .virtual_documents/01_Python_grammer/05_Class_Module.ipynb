class Bird:
    def fly(self):
        raise NotImplementedError


class Eagle(Bird):
    pass


eagle = Eagle()
eagle.fly() # 정의하지 않은 메서드 사용하니까 NotImplementedError라고 뜸


class Eagle(Bird):
    def fly(self):
        print("very fast")

eagle = Eagle()
eagle.fly()
# 넣어주면 정상 작동함





class MyError(Exception): 
    pass


def say_nick(nick):
    if nick == '바보':
        raise MyError()
    print(nick)


say_nick('천사')


say_nick('바보')


try:
    say_nick('천사')
    say_nick('바보')
except MyError:
    print('허용되지 않는 별명입니다.')





