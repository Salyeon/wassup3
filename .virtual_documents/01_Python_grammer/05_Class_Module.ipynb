# calculator3.py
class Calculator:    #코드는 하나
    def __init__(self):
        self.result = 0

    def add(self, num):
        self.result += num
        return self.result

cal1 = Calculator()   #인스턴스를 만듦
cal2 = Calculator()   # 2명이라서 2개의 인스턴스를 만든 것

